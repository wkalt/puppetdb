#!/usr/bin/make -f
# -*- makefile -*-
include /usr/share/cdbs/1/rules/debhelper.mk

BUILD_ROOT=$(CURDIR)/debian/$(cdbs_curpkg)
rubylibdir=/usr/lib/ruby/vendor_ruby

DESTDIR=$(BUILD_ROOT)
prefix=/usr
export DESTDIR
export rubylibdir
export prefix

install/classifier::
	make -e install-classifier
	install -d -m 0755 "$(DESTDIR)/etc/init.d"
	install -d -m 0755 "$(DESTDIR)/etc/default"
	install -m 0755 ext/debian/classifier.init "$(DESTDIR)/etc/init.d/classifier"
	install -m 0755 ext/default "$(DESTDIR)/etc/default/classifier"

install/classifier-terminus::
	make -e install-terminus
